include README.md
include LICENSE
include pyproject.toml
include .gitignore

# Include the main package
recursive-include hackathon *.py

# Include templates
recursive-include hackathon/templates *.html

# Include static files if they exist
recursive-include hackathon/static *.css *.js *.png *.jpg *.jpeg *.gif *.svg *.ico

# Include migration files
recursive-include hackathon/migrations *.py

# Include locale files if they exist
recursive-include hackathon/locale *.po *.mo

# Exclude compiled Python files
global-exclude __pycache__
global-exclude *.py[co]
global-exclude *.pyo
global-exclude *.pyd
global-exclude .DS_Store
global-exclude *.so
global-exclude .git*
global-exclude *.egg-info

# Exclude development and testing files
exclude tox.ini
exclude .coverage
exclude .pytest_cache
recursive-exclude tests *.py
recursive-exclude docs *.py *.rst *.md

# Exclude IDE files
global-exclude .vscode
global-exclude .idea
global-exclude *.swp
global-exclude *.swo
global-exclude *~